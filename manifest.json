{
    "name": "Ghost",
    "id": "ghost",
    "packaging_format": 1,
    "description": {
        "en": "Just a blogging platform",
    },
    "version": "4.4.0",
    "url": "https://ghost.org/",
    "license": "MIT",
    "maintainer": {
        "name": "Julien Malik",
        "email": "julien.malik@paraiso.me"
    },
   "requirements": {
        "yunohost": ">= 3.8.1"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Ghost",
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Ghost",
                },
                "example": "/blog",
                "default": "/blog"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                },
                "default": true
            }
        ]
    }
}
